{
	"manifest_version": 2,
	"name": "Re Registration Validation Extension",
	"description": "Scraper with a copy function for the SL Customs Electronic Registration",
	"version": "1.6.1",
	"author": "@sankhaKarunasekara",
	"background": {
		"scripts": [
			"popup.js"
		],
		"persistent": true
	},
	"permissions": [
		"*://www.customs.gov.lk/registrations/adminApplicationView/*",
		"*://customs.gov.lk/registrations/adminApplicationView/*",
		"*://ereg.customs.gov.lk/registrations/adminApplicationView/*"
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "favicon-16x16.png",
		"32": "favicon-32x32.png",
		"96": "favicon-96x96.png",
		"144": "favicon-144x144.png"
	},
	"web_accessible_resources": [
		"icon.png"
	]
}